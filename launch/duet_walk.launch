<?xml version="1.0"?>
<launch>
    <arg name="roomba" />
    <arg name="robot_frame_id" default="$(arg roomba)/base_link" />

    <arg name="map_file" default="$(find roomba_visualizer)/map/map.yaml" />

    <group ns="$(arg roomba)" >
        <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)" />
        <include file="$(find multi_robots)/launch/launch_devices.launch" >
            <arg name="roomba" default="$(arg roomba)" />
        </include>
        <include file="$(find multi_robots)/launch/launch_softwares.launch" >
            <arg name="roomba" default="$(arg roomba)" />
            <arg name="use_colors" default="green,blue,purple" />
        </include>
        <include file="$(find roomba_visualizer)/launch/amcl.launch" >
            <arg name="roomba" default="$(arg roomba)" />
        </include>

        <node pkg="dwa_planner" type="dwa_planner" name="dwa_planner">
            <rosparam command="load" file="$(find navigator)/config/dwa_param.yaml"/>
            <param name="ROBOT_FRAME" value="$(arg robot_frame_id)" />
            <remap from="/local_map" to="local_map"/>
            <remap from="/scan" to="corrected_scan"/>
            <remap from="/local_goal" to="local_goal"/>
            <remap from="/cmd_vel" to="local_path/cmd_vel"/>
            <remap from="/odom" to="roomba/corrected_odometry"/>
        </node>

        <node pkg="navigator" type="message_reviser_node" name="message_reviser" />
        <group if="$(eval roomba=='roomba1' or roomba=='roomba2')">
            <arg name="route_file" default="route1" />
            <node pkg="navigator" type="waypoints_manager_node" name="waypoint_manager">
                <rosparam command="load" file="$(find navigator)/config/$(arg route_file).yaml" />
            </node>
        </group>

        <group if="$(eval roomba=='roomba3' or roomba=='roomba4')">
            <arg name="route_file" default="route2" />
            <node pkg="navigator" type="waypoints_manager_node" name="waypoint_manager">
                <rosparam command="load" file="$(find navigator)/config/$(arg route_file).yaml" />
            </node>
        </group>

        <group if="$(eval roomba=='roomba5' or roomba=='roomba6')">
            <arg name="route_file" default="route3" />
            <node pkg="navigator" type="waypoints_manager_node" name="waypoint_manager">
                <rosparam command="load" file="$(find navigator)/config/$(arg route_file).yaml" />
            </node>
        </group>
        <node pkg="rosbag" type="record" name="rosbag_record" args="record -o /home/amsl/$(arg roomba)_duet_walk.bag /$(arg roomba)/camera/aligned_depth_to_color/image_raw/compressed /$(arg roomba)/camera/color/camera_info /$(arg roomba)/camera/color/image_rect_color/compressed /$(arg roomba)/theta_s/image_raw/compressed /$(arg roomba)/roomba/odometry /$(arg roomba)/corrected_scan /$(arg roomba)/amcl_pose /$(arg roomba)/local_goal /$(arg roomba)/dwa_planner/selected_trajectory /$(arg roomba)/dwa_planner/candidate_trajectories /$(arg roomba)/particlecloud /$(arg roomba)/target/position /$(arg roomba)/target/angle /tf /tf_static" />
    </group>

</launch>
