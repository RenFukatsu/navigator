<?xml version="1.0"?>
<launch>
    <param name="use_sim_time" value="true" />

    <arg name="bag_dir" default="$(env HOME)/bagfiles/roomba/duet_walk" />
    <arg name="bag_command" default="$(arg bag_dir)/roomba1.bag $(arg bag_dir)/roomba2.bag $(arg bag_dir)/roomba3.bag $(arg bag_dir)/roomba4.bag $(arg bag_dir)/roomba5.bag $(arg bag_dir)/roomba6.bag"/>
    <arg name="map_file" default="$(find roomba_visualizer)/map/map.yaml" />
    <arg name="rviz_config" default="$(find navigator)/rviz/duet_bag_play.rviz" />

    <arg name="add_bag_option" default="" />
    <node pkg="rosbag" type="play" name="rosbag_play" args="--clock $(arg add_bag_option) $(arg bag_command)" output="screen" required="true" />

    <node pkg="map_server" type="map_server" name="map_server" args="$(arg map_file)" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)" />

</launch>
